%footer.row
  .twelve.columns
    .row
      .two.columns
        %p &copy; Apptivate.
      .ten.columns
        %ul.link-list.right
          %li= link_to "Features", features_path
          %li= link_to "Pricing", pricing_path
          %li
            %a{:href => "javascript:UserVoice.showPopupWidget();"} Feedback
          %li= link_to "About Us", about_path


:javascript
  
  $('#footer .row ul li:first').hover(function() {
    $(this).addClass("footer-buttons");
    }, function() {
    $(this).removeClass("footer-buttons");
  });

  $('#footer .row ul li:nth(1)').hover(function() {
    $(this).addClass("footer-buttons");
    }, function() {
    $(this).removeClass("footer-buttons");
  });

  $('#footer .row ul li:nth(2)').hover(function() {
    $(this).addClass("footer-buttons");
    }, function() {
    $(this).removeClass("footer-buttons");
  });

  $('#footer .row ul li:last').hover(function() {
    $(this).addClass("footer-buttons");
    }, function() {
    $(this).removeClass("footer-buttons");
  });
