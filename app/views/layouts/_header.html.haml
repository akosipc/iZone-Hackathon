%nav.top-bar.fixed
  %ul
    %li.name
      %h1=link_to "SocialResume", root_path
    %li.divider

  %section
    %ul.left
      - if user_signed_in?
      - else
        %li=link_to "Features and Pricing", features_path
        %li=link_to "About Us", about_path

    %ul.right
      - if user_signed_in?
        %li= link_to "Profile", profile_path
        %li.divider
        %li= link_to "Log Out!", destroy_user_session_path, method: :delete
      - else 
        %li.divider
        %li= link_to "Sign-in via Facebook", user_omniauth_authorize_path(:facebook)
